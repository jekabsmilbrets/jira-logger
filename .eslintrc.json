{
  "root": true,
  "ignorePatterns": [
    "projects/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "project": [
          "tsconfig.json"
        ],
        "createDefaultProgram": true
      },
      "extends": [
        "plugin:@angular-eslint/recommended",
        "plugin:@angular-eslint/ng-cli-compat",
        "plugin:@angular-eslint/ng-cli-compat--formatting-add-on",
        "plugin:@angular-eslint/template/process-inline-templates"
      ],
      "rules": {
        "@angular-eslint/directive-selector": [
          "error",
          {
            "type": "attribute",
            "prefix": "app",
            "style": "camelCase"
          }
        ],
        "@angular-eslint/component-selector": [
          "error",
          {
            "type": "element",
            "prefix": "app",
            "style": "kebab-case"
          }
        ],
        "import/no-unresolved": "off",
        "import/named": "warn",
        "import/namespace": "warn",
        "import/no-named-as-default": "off",
        "import/export": "warn",
        "import/order": [
          "error",
          {
            "alphabetize": {
              "order": "asc"
            },
            "groups": [
              "builtin",
              "external",
              "parent",
              "sibling",
              "index"
            ],
            "pathGroups": [
              {
                "pattern": "rxjs|rxjs/**",
                "group": "builtin",
                "position": "after"
              },
              {
                "pattern": "@core/**",
                "group": "external",
                "position": "after"
              },
              {
                "pattern": "@task/**",
                "group": "external",
                "position": "after"
              }
            ],
            "newlines-between": "always-and-inside-groups",
            "pathGroupsExcludedImportTypes": []
          }
        ],
        "@typescript-eslint/member-ordering": [
          "error",
          {
            "default": [
              "public-field",
              "protected-field",
              "private-field",
              "constructor",
              "public-method",
              "protected-method",
              "private-method"
            ]
          }
        ],
        "no-underscore-dangle": "off"
      }
    },
    {
      "files": [
        "*.html"
      ],
      "extends": [
        "plugin:@angular-eslint/template/recommended"
      ],
      "rules": {}
    }
  ]
}
